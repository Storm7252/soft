@model Softst.Models.Student

@{
    ViewData["Title"] = "StudentRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="alert-info " style="display:inline-block">Student Registration<i class="fa-solid fa-right-to-bracket"></i></h2>



<hr/>
<div class="row ">
    <div class="col-md-4 alert-warning">
        <form asp-action="StudentRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FathersName" class="control-label"></label>
                <input asp-for="FathersName" class="form-control" />
                <span asp-validation-for="FathersName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdhaarNo" class="control-label"></label>
                <input asp-for="AdhaarNo" class="form-control" />
                <span asp-validation-for="AdhaarNo" class="text-danger"></span>
            </div>
            <div class="custom-file" style="padding-top:15px;padding-bottom:15px">
                <input asp-for="profileUrl" type="file" class="custom-file-input" id="inputGroupFile01">
                <label class="custom-file-label" for="inputGroupFile01">Choose Picture </label>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" class="form-control">
                    <option disabled selected>choose Your Course</option>
                    @if(ViewBag.data != null)
                    {
                        @foreach (var data in ViewBag.data)
                        {
                            <option value="@data.CourseId">@data.CourseName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="SignUp" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
