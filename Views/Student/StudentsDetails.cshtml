@model IEnumerable<Softst.Models.Student>

@{
    ViewData["Title"] = "StudentsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="alert-info" style="display:inline-block">Students List</h2>

<p>
    <a asp-action="StudentRegister">Register New Student</a>
</p>
<table class="table bg-gradient">
    <thead class="alert-info">
        <tr >
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.FathersName)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="alert-warning">
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.FathersName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.StudentId}) |
                    @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                    @Html.ActionLink("Delete", "DeleteStudent", new { id = item.StudentId })
            </td>
        </tr>
}
    </tbody>
</table>
